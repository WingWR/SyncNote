<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.syncnote.document.mapper.DocumentCollaboratorMapper">

    <select id="selectUserSimpleByIds" resultType="com.syncnote.document.dto.response.UserSimpleInfo">
        SELECT id, username
        FROM `user`
        WHERE id IN
        <foreach item="id" collection="userIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>